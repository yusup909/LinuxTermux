FROM node:lts-buster



RUN apt-get update && \

  apt-get install -y \

  apt install git \

  apt-get proot-distro \

  git clone https://github.com/termux/proot-distro \
  
  cd proot-distro \
  
  ./install.sh \
  
  rm -rf /var/lib/apt/lists/*






RUN ./install.sh 



COPY . .



EXPOSE 5000



CMD ["npm", "start"]
